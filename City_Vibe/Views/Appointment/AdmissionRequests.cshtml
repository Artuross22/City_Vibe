@using City_Vibe.ViewModels.AppointmentController
@model IEnumerable<ApplicationUserViewModel>


@foreach (var item in Model)
{
      <td>
        <form asp-controller="Event" asp-action="DetailEvent" method="post" asp-route-id="@item.EventId">
          <input type="submit" value="Back" />
        </form>
      </td>       
}

@{
    ViewData["Title"] = "AdmissionRequests";
}

<h1>AdmissionRequests</h1>
<section class="flush-with-above">
    <div class="container">
        <div class="row">
            <div class="col">
                <table class="table table-hover align-items-center table-borderless">
                    <tbody>
                        @foreach (var user in Model)
                        {
                 
                            <tr class="bg-white">
                                <th scope="row">
                                    <div class="media align-items-center">
                                        <img alt="Image profile avatar" src="@user.ProfileImageUrl" class="avatar">
                                        <div class="media-body">
                                            <span class="h6 mb-0">@user.UserName</span>
                                            <span class="h6 mb-0">@user.Email</span>
                                            <span class="h6 mb-0">@user.Title</span>
                                            <span class="h6 mb-0">@user.Description</span>
                                            <span class="h6 mb-0">@user.Phone</span>
                                        </div>
                                    </div>

                                    @using (Html.BeginForm("ReplayStatement", "Appointment", FormMethod.Post))
                                    {
                                        <input type="text" name="Reason" placeholder="Type  reply..."
                                         style="width:100%; height:60px; font-size:20px; margin-top:10px" />
                                        <br />
                                        <input type="hidden" name="AppointmentId" value="@user.Id" />
                                        <input type="hidden" name="EventId" asp-for="@user.EventId" />
                                        <input type="submit" value="Post Reply" class="btn btn-success" style="margin-top :10px" />
                                    }

                                    <div class="row">
                                        <div class="col-md-4">
                                            <form asp-controller="Appointment" asp-action="AddAppointmentUpdate">
                                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                
                                                <input type="hidden" Id="AppointmentId" name="AppointmentId" asp-for="@user.Id" />
                                      

                                                <div class="form-group form-check">
                                                    <label class="form-check-label">
                                                        <input class="form-check-input" name="Statement" asp-for="@user.Statement" /> @Html.DisplayNameFor(model => model.Statement)
                                                    </label>
                                                </div>

                                                <div class="form-group">
                                                    <input type="submit" value="Check" class="btn btn-primary" />
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                <td>
                                    <form asp-controller="AppUser" asp-action="Detail" method="post" asp-route-id="@user.AppUserId">
                                        <input type="submit" value="View Profile" />
                                    </form>
                                </td>                
                                <td>                              
                              
                            </tr>
                   

                            <tr class="table-divider">
                                <th></th>
                                <td></td>
                            </tr>

                        }


                    </tbody>
                </table>
            </div>
            <!--end of col-->
        </div>
        <!--end of row-->
    </div>

   
    
    <!--end of container-->
</section>

