@{
    ViewData["Title"] = "EditUserRole";
}


@using Microsoft.AspNetCore.Identity
@model City_Vibe.ViewModels.RoleController.ChangeRoleViewModel

<h2>Changing roles for the user @Model.UserEmail</h2>

<form asp-action="EditUserRole" method="post">
    <input type="hidden" name="userId" value="@Model.UserId" />
    <div class="form-group">
        @foreach (IdentityRole role in Model.AllRoles)
        {
            <input type="checkbox" name="roles" value="@role.Name"
               @(Model.UserRoles.Contains(role.Name) ? "checked=\"checked\"" : "") />

            @role.Name <br />
      
        }
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>

