@using City_Vibe.ViewModels.EventController
@model CreateEventViewModel

@{
    var category = ViewBag.Categories as SelectList;
}
   

<form method="post" asp-action="CreateEvent" enctype="multipart/form-data">
    <input type="hidden" id="AppUserId" name="AppUserId" asp-for="AppUserId" />
    <input type="hidden" ClubId="ClubId" name="ClubId" asp-for="ClubId" />

    <div class="form-group">
        <label asp-for="Name">Title</label>
        <input asp-for="Name" class="form-control" placeholder="Title">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Desciption">Description</label>
        <input asp-for="Desciption" class="form-control" placeholder="Description">
        <span asp-validation-for="Desciption" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label asp-for="Address.Street">Street</label>
        <input asp-for="Address.Street" class="form-control" placeholder="Street">
        <span asp-validation-for="Address.Street" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Address.City">City</label>
        <input asp-for="Address.City" class="form-control" placeholder="Street">
        <span asp-validation-for="Address.Street" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Address.Region">Region</label>
        <input asp-for="Address.Region" class="form-control" placeholder="Street">
        <span asp-validation-for="Address.Region" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label asp-for="CreatedDate" class="control-label">Date of holding</label>
        <input asp-for="CreatedDate" class="form-control" />
        <span asp-validation-for="CreatedDate" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label asp-for="Image">Image</label>
        <input asp-for="Image" type="file" class="form-control" placeholder="Image">
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>

      <div class="form-group">
          
             @Html.DropDownListFor(model => model.CategoryId, category, "Select category")             
             <span asp-validation-for=" CategoryId" class="text-danger"> </span>
       </div>

           
    <button type="submit" class="btn btn-primary">Submit</button>
</form>