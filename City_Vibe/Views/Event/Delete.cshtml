<div class="form-group">
    <dl>
        <dt class="col-sm-2">
            <form action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Confirm" class="btn btn-danger float-right mt-3" />
            </form>
        </dt>
        <dt class="col-sm-8">
            <li class="btn btn-success  float-right mt-3">
                <a class="nav-link text-dark" asp-area="" asp-controller="Event" asp-action="Index">Back</a>
