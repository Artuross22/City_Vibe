<div class="album py-5 bg-light">
    <div class="container">


        @foreach (var item in Model.SaveEvents)
        {
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <img class="card-img-top" src="@item.Event.Image" width="100%" height="225" atl="Card image cap">

                    <div class="card-body">
                        <p class="card-text">@item.Event.Name</p>
                        <p class="card-text">@item.Event.Desciption</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">

                                <a type="btn btn-success" asp-controller="Event" asp-action="DetailEvent" asp-route-id="@item.EventId"
                               class="btn btn-sm btn-outline-secondary">Detail</a>



                                <a type="btn btn-success" asp-controller="Event" asp-action="Edit" asp-route-id="@item.EventId" class="btn btn-sm btn-outline-secondary">Edit</a>
                                <a type="btn btn-success" asp-controller="Event" asp-action="Delete" asp-route-id="@item.EventId" class="btn btn-sm btn-outline-secondary">Delete</a>

                            </div>
                            <small class="text-muted">@item.Event.Category</small>
                        </div>
                    </div>
                </div>
            </div>

        }
    </div>
</div>

</div>