@model City_Vibe.ViewModels.AppUserController.AppUserDetailViewModel

@{
    ViewData["Title"] = "Detail";
}

<h1>Detail</h1>

<div class="row">
    <div class="col-md-3 col-sm-6 mb-4">
        <a href="#">
            <img class="mr-md-5 avatar avatar-xlg" alt="Group member" src="@Model.ProfileImageUrl">
        </a>
    </div>
</div>

<div>
    <h4>UserDetailViewModel</h4>
    <hr />

    <dl class="row">

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserName)
        </dt>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserName)
        </dd>

     
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Address.Region)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address.Region)
        </dd>
   
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Address.Street)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address.Street)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Address.City)
        </dt>
        <dd class="col-sm-10">
            @{
                var CityDisplay = Model.Address?.City ?? string.Empty;
            }
            @Html.DisplayFor(model => CityDisplay)
        </dd>
    </dl>

</div>
<div>
    @Html.ActionLink("EditProfile", "EditProfile", new { /* id = Model.PrimaryKey */ }) |
    <a asp-action="Index">Back to List</a>
</div>
